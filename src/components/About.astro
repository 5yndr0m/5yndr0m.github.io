---
import { Icon } from "astro-icon/components";

const experience = [
    {
        title: "TryHackMe: Advent of Cyber 2025",
        detail: "Gained Hands-on experience in SIEM (Splunk), Malware Analysis, and vulnerability assessments.",
    },
    {
        title: "Home Lab Automation",
        detail: "Engineered and Maintained secure infrastructure on Linux (Arch/Fedora/CentOS) using Container Orchestration (Podman/Docker) and Cloudflare Tunnels.",
    },
    {
        title: "Disaster Watch (Team Lead)",
        detail: "Led an 8-person team to develop a MERN-stack community driven disaster reporting system.",
    },
];

const certifications = [
    {
        title: "TryHackMe: Pre-Security Learning Path",
        detail: "Foundational cybersecurity pathways completed in 2026.",
        link: "https://tryhackme.com/p/5yndr0m",
    },
    {
        title: "TryHackMe: Advent of Cyber 2025",
        detail: "Completed a 24-day intensive cybersecurity challenge.",
        link: "https://tryhackme.com/p/5yndr0m",
    },
    {
        title: "Cisco: Introduction to Cybersecurity",
        detail: "Certified in 2024 via Cisco Networking Academy.",
        link: "#",
    },
    {
        title: "MongoDB: Data Modeling Path",
        detail: "Specialized in NoSQL database architecture and modeling.",
        link: "#",
    },
];
---

<section
    id="about"
    class="py-24 border-t border-gray-100 dark:border-gray-900 bg-white dark:bg-gray-950"
>
    <div class="max-w-5xl mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-16 items-start">
            <div class="space-y-8">
                <h2
                    class="text-3xl font-bold text-gray-900 dark:text-white flex items-center gap-3"
                >
                    <span class="w-2 h-8 bg-lime-500 rounded-full"></span>
                    Who Am I?
                </h2>
                <div
                    class="space-y-6 text-gray-600 dark:text-gray-400 leading-relaxed text-base"
                >
                    <p>
                        I am <span
                            class="text-gray-900 dark:text-white font-semibold"
                            >Senal Dilanjana</span
                        >, a Linux-Native Technologist and IT undergraduate at
                        the University of Vavuniya. I focus on securing digital
                        infrastructures and optimizing system workflows.
                    </p>
                    <p>
                        My "daily driver" is Arch Linux, and I spend my time
                        engineering secure, self-hosted automation
                        infrastructures and testing them. I am deeply interested
                        in Security Auditing, Ethical Hacking, and Agentic AI
                        workflows.
                    </p>
                    <p>
                        Outside of the terminal, I enjoy exploring Linux
                        customization and staying updated on CI/CD pipelines. I
                        value collaboration and have experience leading
                        development teams in university and independent
                        environments.
                    </p>
                </div>
            </div>

            <div class="space-y-10">
                <div
                    class="group border border-gray-200 dark:border-gray-800 rounded-2xl overflow-hidden bg-gray-50/50 dark:bg-gray-900/50 transition-all hover:border-lime-500/30"
                >
                    <div
                        class="px-4 py-3 bg-gray-200/50 dark:bg-gray-800/50 border-b border-gray-200 dark:border-gray-800 flex items-center justify-between"
                    >
                        <span
                            class="font-mono text-[11px] text-lime-600 dark:text-lime-400 uppercase tracking-widest"
                            >ls ~/experience</span
                        >
                        <div class="flex gap-1.5">
                            <div class="w-2.5 h-2.5 rounded-full bg-red-500/40">
                            </div>
                            <div
                                class="w-2.5 h-2.5 rounded-full bg-amber-500/40"
                            >
                            </div>
                            <div
                                class="w-2.5 h-2.5 rounded-full bg-green-500/40"
                            >
                            </div>
                        </div>
                    </div>
                    <div class="p-3">
                        {
                            experience.map((item) => (
                                <details class="group/item border-b border-gray-100 dark:border-gray-800 last:border-0">
                                    <summary class="list-none cursor-pointer flex justify-between items-center py-4 px-2 text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-lime-500 transition-colors">
                                        <span>{item.title}</span>
                                        <Icon
                                            name="mdi:chevron-down"
                                            class="w-4 h-4 group-open/item:rotate-180 transition-transform text-gray-400"
                                        />
                                    </summary>
                                    <div class="pb-5 px-4">
                                        <p class="text-xs text-gray-500 dark:text-gray-500 border-l-2 border-lime-500/20 pl-4 leading-relaxed">
                                            {item.detail}
                                        </p>
                                    </div>
                                </details>
                            ))
                        }
                    </div>
                </div>

                <div
                    class="group border border-gray-200 dark:border-gray-800 rounded-2xl overflow-hidden bg-gray-50/50 dark:bg-gray-900/50 transition-all hover:border-lime-500/30"
                >
                    <div
                        class="px-4 py-3 bg-gray-200/50 dark:bg-gray-800/50 border-b border-gray-200 dark:border-gray-800 flex items-center justify-between"
                    >
                        <span
                            class="font-mono text-[11px] text-lime-600 dark:text-lime-400 uppercase tracking-widest"
                            >ls ~/certifications</span
                        >
                        <div class="flex gap-1.5">
                            <div
                                class="w-2.5 h-2.5 rounded-full bg-gray-300 dark:bg-gray-700"
                            >
                            </div>
                        </div>
                    </div>
                    <div class="p-3">
                        {
                            certifications.map((item) => (
                                <details class="group/item border-b border-gray-100 dark:border-gray-800 last:border-0">
                                    <summary class="list-none cursor-pointer flex justify-between items-center py-4 px-2 text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-lime-500 transition-colors">
                                        <span>{item.title}</span>
                                        <Icon
                                            name="mdi:chevron-down"
                                            class="w-4 h-4 group-open/item:rotate-180 transition-transform text-gray-400"
                                        />
                                    </summary>
                                    <div class="pb-5 px-4">
                                        <div class="border-l-2 border-lime-500/20 pl-4 space-y-3">
                                            <p class="text-xs text-gray-500 dark:text-gray-500 leading-relaxed">
                                                {item.detail}
                                            </p>
                                            <a
                                                href={item.link}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                                class="inline-flex items-center gap-1 text-[10px] font-mono uppercase tracking-tighter text-lime-600 dark:text-lime-400 hover:underline"
                                            >
                                                View_Certificate{" "}
                                                <Icon
                                                    name="mdi:arrow-right"
                                                    class="w-3 h-3"
                                                />
                                            </a>
                                        </div>
                                    </div>
                                </details>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
