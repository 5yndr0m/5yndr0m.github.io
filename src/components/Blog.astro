---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
const posts = (await getCollection("blog")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<section id="blog" class="py-20">
    <div class="max-w-5xl mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-10">
            {
                posts.map((post) => (
                    <a href={`/blog/${post.slug}`} class="group">
                        <div class="aspect-video bg-gray-900 rounded-3xl overflow-hidden mb-4 border border-gray-200 dark:border-gray-800">
                            {post.data.heroImage && (
                                <Image
                                    src={post.data.heroImage}
                                    alt={post.data.title}
                                    width={800}
                                    height={450}
                                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                />
                            )}
                        </div>
                        <div class="space-y-2">
                            <div class="flex items-center gap-3">
                                <span class="text-[10px] font-mono text-lime-500 uppercase tracking-widest">
                                    {post.data.category}
                                </span>
                                <span class="text-[10px] font-mono text-gray-500">
                                    {post.data.pubDate.toLocaleDateString()}
                                </span>
                            </div>
                            <h3 class="text-xl font-bold group-hover:text-lime-500 transition-colors">
                                {post.data.title}
                            </h3>
                            <p class="text-gray-500 text-sm line-clamp-2">
                                {post.data.description}
                            </p>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</section>
