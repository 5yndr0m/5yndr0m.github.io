---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
const posts = (await getCollection("blog")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<section id="blog" class="py-24 border-t border-gray-100 dark:border-gray-900">
    <div class="max-w-5xl mx-auto px-6">
        <h2
            class="text-3xl font-bold text-gray-900 dark:text-white flex items-center gap-3 mb-16"
        >
            <span class="w-2 h-8 bg-lime-500 rounded-full"></span>
            Journal
        </h2>

        <div class="grid md:grid-cols-2 gap-12">
            {
                posts.map((post) => (
                    <a href={`/blog/${post.slug}`} class="group space-y-5">
                        <div class="aspect-video bg-gray-100 dark:bg-gray-900 rounded-2xl overflow-hidden border border-gray-200 dark:border-gray-800 transition-transform group-hover:border-lime-500/30">
                            {post.data.heroImage && (
                                <Image
                                    src={post.data.heroImage}
                                    alt={post.data.title}
                                    width={800}
                                    height={450}
                                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                                />
                            )}
                        </div>
                        <div class="space-y-3 px-1">
                            <div class="flex items-center gap-4">
                                <span class="text-[10px] font-mono font-bold text-lime-600 dark:text-lime-400 uppercase tracking-[0.2em]">
                                    {post.data.category}
                                </span>
                                <span class="text-[10px] font-mono text-gray-400 dark:text-gray-500 uppercase">
                                    {post.data.pubDate.toLocaleDateString(
                                        "en-US",
                                        {
                                            month: "short",
                                            day: "2-digit",
                                            year: "numeric",
                                        },
                                    )}
                                </span>
                            </div>
                            <h3 class="text-xl font-bold text-gray-900 dark:text-white group-hover:text-lime-500 transition-colors leading-snug">
                                {post.data.title}
                            </h3>
                            <p class="text-gray-500 dark:text-gray-400 text-sm line-clamp-2 leading-relaxed">
                                {post.data.description}
                            </p>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</section>
