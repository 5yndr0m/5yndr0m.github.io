---
import { Icon } from "astro-icon/components";

const socialLinks = [
    {
        name: "LinkedIn",
        icon: "mdi:linkedin",
        href: "https://linkedin.com/in/senalkad",
        color: "hover:border-blue-500/50 hover:text-blue-500",
        username: "in/senalkad",
    },
    {
        name: "GitHub",
        icon: "mdi:github",
        href: "https://github.com/5yndr0m",
        color: "hover:border-lime-500/50 hover:text-lime-500",
        username: "github/5yndr0m",
    },
    {
        name: "Twitter / X",
        icon: "mdi:twitter",
        href: "https://x.com/Syndromsdk",
        color: "hover:border-sky-400/50 hover:text-sky-400",
        username: "@Syndromsdk",
    },
    {
        name: "Email",
        icon: "mdi:email",
        href: "mailto:contact@dilanjana.me",
        color: "hover:border-red-400/50 hover:text-red-400",
        username: "contact@dilanjana.me",
    },
];

const faqs = [
    {
        q: "Are you available for work opportunities?",
        a: "Yes! I am actively seeking roles focusing on Cybersecurity, System Administration, or DevOps where I can apply my expertise in Linux-native environments.",
    },
    {
        q: "What is your typical response time?",
        a: "I usually respond within 24-48 hours. For urgent matters, LinkedIn DM is the fastest way to reach me.",
    },
    {
        q: "Do you handle freelance projects?",
        a: "I take on select freelance work involving Linux server setup, workflow automation (n8n), and full-stack web development.",
    },
    {
        q: "Can we collaborate on Open Source?",
        a: "Absolutely. I am passionate about the Linux ecosystem. If you have an interesting project on GitHub, let's talk.",
    },
    {
        q: "Are you open to on-site work?",
        a: "I am primarily based in Sri Lanka and open to hybrid/on-site roles within the region, or fully remote global opportunities.",
    },
];
---

<section
    id="contact"
    class="py-24 border-t border-gray-100 dark:border-gray-900 bg-white dark:bg-gray-950"
>
    <div class="max-w-5xl mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-20">
            <div class="space-y-10">
                <div>
                    <h2
                        class="text-3xl font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3"
                    >
                        <span class="w-2 h-8 bg-lime-500 rounded-full"></span>
                        Let's Collaborate
                    </h2>
                    <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                        Whether you're looking to hire for a professional role,
                        start a project, or just discuss the future of AI and
                        Linuxâ€”I'm always down to chat.
                    </p>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    {
                        socialLinks.map((link) => (
                            <a
                                href={link.href}
                                target="_blank"
                                class={`flex items-center gap-4 p-4 rounded-2xl border border-gray-100 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-900/50 transition-all duration-300 group ${link.color}`}
                            >
                                <Icon
                                    name={link.icon}
                                    class="w-6 h-6 text-gray-400 group-hover:scale-110 transition-transform"
                                />
                                <div>
                                    <p class="text-xs font-bold text-gray-900 dark:text-white">
                                        {link.name}
                                    </p>
                                    <p class="text-[10px] font-mono text-gray-500 uppercase tracking-tighter mt-0.5">
                                        {link.username}
                                    </p>
                                </div>
                            </a>
                        ))
                    }
                </div>

                <div
                    class="p-6 rounded-2xl bg-lime-500/5 border border-lime-500/10 flex gap-4 items-start"
                >
                    <Icon
                        name="mdi:clock-outline"
                        class="w-5 h-5 text-lime-500 shrink-0 mt-0.5"
                    />
                    <div class="space-y-1">
                        <span
                            class="text-[10px] font-mono font-bold text-lime-600 dark:text-lime-400 uppercase tracking-[0.2em]"
                            >Availability_Status</span
                        >
                        <p
                            class="text-xs text-gray-600 dark:text-gray-400 leading-relaxed"
                        >
                            Currently responding within <span
                                class="text-gray-900 dark:text-white font-semibold italic"
                                >48 hours</span
                            >. Available for remote collaboration across all
                            time zones.
                        </p>
                    </div>
                </div>
            </div>

            <div class="space-y-8">
                <h3
                    class="font-mono text-[11px] text-gray-400 uppercase tracking-[0.3em] flex items-center gap-2"
                >
                    <Icon
                        name="mdi:frequently-asked-questions"
                        class="w-4 h-4 text-lime-500"
                    />
                    General_FAQ
                </h3>

                <div class="space-y-2">
                    {
                        faqs.map((faq) => (
                            <details class="group border-b border-gray-100 dark:border-gray-900/50 last:border-0 pb-4">
                                <summary class="list-none cursor-pointer flex justify-between items-center text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-lime-500 transition-colors py-3">
                                    <span>{faq.q}</span>
                                    <Icon
                                        name="mdi:plus"
                                        class="w-4 h-4 text-gray-400 group-open:rotate-45 transition-transform"
                                    />
                                </summary>
                                <div class="pt-2 pb-4 px-4">
                                    <p class="text-xs text-gray-500 dark:text-gray-500 leading-relaxed border-l-2 border-lime-500/20 pl-4 italic">
                                        {faq.a}
                                    </p>
                                </div>
                            </details>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</section>
