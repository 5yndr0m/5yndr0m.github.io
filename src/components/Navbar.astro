---
import { Icon } from "astro-icon/components";
---

<nav
    class="fixed top-0 left-0 w-full z-100 bg-white/70 dark:bg-gray-950/70 backdrop-blur-xl border-b border-gray-200 dark:border-gray-800"
>
    <div class="max-w-5xl mx-auto px-6 h-16 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2 group">
            <div
                class="w-8 h-8 bg-lime-500 rounded flex items-center justify-center group-hover:rotate-12 transition-transform"
            >
                <Icon name="mdi:terminal" class="text-black w-5 h-5" />
            </div>
            <span
                class="font-bold tracking-tighter text-gray-900 dark:text-white uppercase italic"
                >Senal.sh</span
            >
        </a>

        <div class="hidden md:flex items-center gap-8">
            <a
                href="#about"
                class="text-sm font-medium text-gray-500 hover:text-lime-500 transition-colors"
                >/about</a
            >
            <a
                href="#projects"
                class="text-sm font-medium text-gray-500 hover:text-lime-500 transition-colors"
                >/projects</a
            >
            <a
                href="#skills"
                class="text-sm font-medium text-gray-500 hover:text-lime-500 transition-colors"
                >/skills</a
            >
            <a
                href="/resume.pdf"
                class="px-4 py-2 bg-gray-900 dark:bg-white text-white dark:text-black rounded-lg text-xs font-bold hover:scale-105 transition-transform"
            >
                DOWNLOAD_CV
            </a>
        </div>

        <button class="md:hidden text-gray-500" aria-label="Toggle Menu">
            <Icon name="mdi:menu" class="w-6 h-6" />
        </button>
    </div>
</nav>
