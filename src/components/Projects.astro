---
import { Icon } from "astro-icon/components";

const projects = [
    {
        name: "Disaster Watch",
        description:
            "A community-driven MERN-stack mobile and web application for real-time disaster reporting and administration. Led an 8-person team through the full SDLC.",
        tech: ["React Native", "Express", "MongoDB"],
        link: "https://github.com/5yndr0m/disaster-watch",
    },
    {
        name: "Home Lab Automation",
        description:
            "Secure, self-hosted infrastructure on Arch Linux using Podman pods and Cloudflare Tunnels to automate system-level execution via SSH and n8n.",
        tech: ["Arch Linux", "Podman", "n8n", "Cloudflare"],
        link: "#",
    },
    {
        name: "NetSniff",
        description:
            "A low-level network monitoring tool built in Python that captures and analyzes live data packets as they travel through a network interface.",
        tech: [
            "Python",
            "Network Programming",
            "Packet Analysis",
            "Network Security",
            "Network Monitoring",
        ],
        link: "https://github.com/5yndr0m/netsniff",
    },
];
---

<section
    id="projects"
    class="py-24 border-t border-gray-100 dark:border-gray-900 bg-white dark:bg-gray-950"
>
    <div class="max-w-5xl mx-auto px-6">
        <h2
            class="text-3xl font-bold text-gray-900 dark:text-white flex items-center gap-3 mb-16"
        >
            <span class="w-2 h-8 bg-lime-500 rounded-full"></span>
            Projects
        </h2>

        <div class="grid gap-8">
            {
                projects.map((project) => (
                    <div class="group relative border border-gray-200 dark:border-gray-800 rounded-2xl p-8 bg-gray-50/30 dark:bg-gray-900/30 hover:border-lime-500/30 transition-all duration-300">
                        <div class="flex justify-between items-start gap-4">
                            <div class="space-y-4">
                                <h3 class="text-2xl font-bold text-gray-900 dark:text-white group-hover:text-lime-500 transition-colors">
                                    {project.name}
                                </h3>
                                <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed max-w-2xl">
                                    {project.description}
                                </p>
                                <div class="flex flex-wrap gap-2 pt-2">
                                    {project.tech.map((t) => (
                                        <span class="text-[10px] font-mono font-medium px-2.5 py-1 rounded-md bg-white dark:bg-gray-800 text-gray-500 dark:text-gray-400 border border-gray-200 dark:border-gray-700">
                                            {t}
                                        </span>
                                    ))}
                                </div>
                            </div>

                            <a
                                href={project.link}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="shrink-0 p-3 rounded-xl bg-white dark:bg-gray-800 text-gray-400 hover:text-lime-500 hover:scale-110 border border-transparent hover:border-lime-500/20 shadow-sm transition-all"
                                aria-label={`View ${project.name} source code`}
                            >
                                <Icon name="mdi:github" class="w-6 h-6" />
                            </a>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
