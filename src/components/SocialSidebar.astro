---
import { Github, Linkedin, Twitter, FileText, Mail } from "lucide-react";

const socialLinks = [
    { icon: Github, href: "https://github.com/5yndr0m", name: "GitHub" },
    { icon: Linkedin, href: "https://www.linkedin.com/in/senal-dilanjana-774799266/", name: "LinkedIn" },
    { icon: Twitter, href: "https://x.com/Syndromsdk", name: "X (Twitter)" },
    { icon: FileText, href: "https://medium.com/", name: "Medium" },
    { icon: Mail, href: "mailto:sdilanjana21@gmail.com", name: "Email" },
];
---

<div class="fixed left-6 bottom-0 z-50 hidden xl:flex flex-col items-center gap-6 animate-fade-in-up">
    <div class="flex flex-col gap-6 items-center translate-y-[-20px]">
        {socialLinks.map((link) => (
            <a 
                href={link.href} 
                target={link.name === "Email" ? "_self" : "_blank"}
                rel="noopener noreferrer"
                class="text-slate-500 hover:text-mainPurple hover:-translate-y-1 transition-all duration-300"
                aria-label={link.name}
            >
                <link.icon className="w-5 h-5" />
            </a>
        ))}
    </div>
    <div class="w-[1px] h-32 bg-gradient-to-t from-transparent via-white/10 to-white/10 shadow-[0_0_10px_rgba(255,255,255,0.05)]"></div>
</div>

<style>
    .animate-fade-in-up {
        animation: fadeInUp 1s ease-out forwards;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
