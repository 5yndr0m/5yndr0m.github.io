---
import Layout from "../layouts/Layout.astro";
import { ProjectsCarousel } from "../components/ProjectsCarousel";
import { Card } from "../components/ui/Card";
import { MinimalBackground } from "../components/ui/MinimalBackground";
import { BlogGrid } from "../components/BlogGrid";
import { ErrorBoundary } from "../components/ui/ErrorBoundary";
import { HeroText } from "../components/ui/HeroText";
import { ProfileImage } from "../components/ui/ProfileImage";
import { FadeIn } from "../components/ui/FadeIn";
import { Mail, Github, Linkedin, Twitter, FileText } from "lucide-react";
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const latestPosts = allPosts
    .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
    .slice(0, 3);

const contactLinks = [
    { name: "GitHub", href: "https://github.com/5yndr0m", icon: Github },
    { name: "LinkedIn", href: "https://www.linkedin.com/in/senal-dilanjana-774799266/", icon: Linkedin },
    { name: "X", href: "https://x.com/Syndromsdk", icon: Twitter },
    { name: "Medium", href: "https://medium.com/", icon: FileText },
    { name: "Email", href: "mailto:sdilanjana21@gmail.com", icon: Mail },
];
---

<Layout title="Syndrom | Home">
    <!-- Hero Section -->
    <div class="relative min-h-screen flex flex-col items-center justify-center text-center px-4 overflow-hidden">
        <ErrorBoundary client:load>
            <MinimalBackground client:load />
        </ErrorBoundary>
        
        <FadeIn client:load>
            <ErrorBoundary client:load>
                 <HeroText client:load />
            </ErrorBoundary>
        </FadeIn>

        <div class="absolute bottom-12 animate-bounce cursor-pointer z-10">
            <a href="#about" class="text-zinc-500 hover:text-white transition-colors duration-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 13l-7 7-7-7m14-8l-7 7-7-7" />
                </svg>
            </a>
        </div>
    </div>

     <!-- About Section -->
    <section id="about" class="py-32 bg-zinc-950 relative">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <FadeIn client:visible>
                <div class="space-y-24">
                    <!-- Summary -->
                    <div class="grid lg:grid-cols-[48%_52%] gap-16 items-start">
                        <div class="space-y-8">
                            <div class="flex items-center gap-6">
                                <ErrorBoundary client:load>
                                    <ProfileImage client:visible />
                                </ErrorBoundary>
                                <h2 class="text-5xl font-bold text-white tracking-tighter">About <span class="text-mainPurple">Me</span></h2>
                            </div>
                            
                            <div class="prose prose-invert prose-lg text-slate-400 font-light leading-relaxed">
                                <p>
                                    Hi, I'm <strong class="text-white font-medium">Senal Dilanjana Kandanaarachchi</strong> (aka{" "}
                                    <strong class="text-mainPurple font-bold">Syndrom</strong>), 
                                    a Linux-native technologist and IT undergraduate at the University of Vavuniya. 
                                </p>
                                <p>
                                    I'm obsessed with <strong class="text-white">system administration</strong>, 
                                    <strong class="text-white">workflow automation</strong>, and breaking systems to understand the chaotic beauty underneath.
                                </p>
                                <p>
                                    Recently, I completed the <strong class="text-mainPurple">TryHackMe Advent of Cyber (2025)</strong> 
                                and Pre-Security paths, gaining hands-on experience in Splunk, Malware Analysis, 
                                and Network Traffic Analysis.
                            </p>
                        </div>

                         <!-- Open TryHackMe Badge (Integrated) -->
                        <div class="flex flex-col sm:flex-row items-center gap-6 pt-4">
                            <div class="w-full h-[90px] flex items-center justify-center overflow-hidden rounded-xl transition-colors">
                                <iframe 
                                    src="https://tryhackme.com/api/v2/badges/public-profile?userPublicId=6469648" 
                                    style='border:none; width: 100%; height: 100%;'
                                    title="TryHackMe Badge"
                                ></iframe>
                            </div>
                            <div class="flex flex-col items-start gap-1">
                                <span class="text-[10px] font-mono text-mainPurple uppercase tracking-[0.2em]">Verified</span>
                                <a 
                                    href="https://tryhackme.com/p/Syndrom" 
                                    target="_blank" 
                                    rel="noopener noreferrer"
                                    class="text-sm font-medium text-white hover:text-mainPurple transition-colors flex items-center gap-2 group"
                                >
                                    View Security Profile
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transition-transform group-hover:translate-x-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg>
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Stats / Focus -->
                    <div class="space-y-8">
                        <Card className="p-8">
                            <h3 class="text-2xl font-bold text-white mb-6 flex items-center gap-3">
                                <span class="w-8 h-8 rounded-lg bg-mainPurple/10 flex items-center justify-center text-mainPurple font-mono text-xs border border-mainPurple/20">01</span>
                                Core Tech Stack
                            </h3>
                            <div class="grid grid-cols-2 gap-y-8 gap-x-4">
                                <div>
                                    <h4 class="text-xs font-bold text-mainGreen uppercase tracking-widest mb-3">Code</h4>
                                    <ul class="space-y-2 text-sm text-slate-400 font-mono">
                                        <li>Python, Java</li>
                                        <li>TypeScript (React)</li>
                                        <li>Bash, C++</li>
                                    </ul>
                                </div>
                                <div>
                                    <h4 class="text-xs font-bold text-mainPurple uppercase tracking-widest mb-3">SecOps</h4>
                                    <ul class="space-y-2 text-sm text-slate-400 font-mono">
                                        <li>Wireshark, Burp</li>
                                        <li>Splunk, SIEM</li>
                                        <li>Linux Hardening</li>
                                    </ul>
                                </div>
                                <div>
                                    <h4 class="text-xs font-bold text-mainLavender uppercase tracking-widest mb-3">Infra</h4>
                                    <ul class="space-y-2 text-sm text-slate-400 font-mono">
                                        <li>Docker, Podman</li>
                                        <li>n8n Automation</li>
                                        <li>GitOps</li>
                                    </ul>
                                </div>
                                <div>
                                    <h4 class="text-xs font-bold text-slate-500 uppercase tracking-widest mb-3">Data</h4>
                                    <ul class="space-y-2 text-sm text-slate-400 font-mono">
                                        <li>PostgreSQL</li>
                                        <li>MongoDB</li>
                                    </ul>
                                </div>
                            </div>
                        </Card>

                        <Card className="p-8">
                            <h3 class="text-2xl font-bold text-white mb-6 flex items-center gap-3">
                                <span class="w-8 h-8 rounded-lg bg-mainGreen/10 flex items-center justify-center text-mainGreen font-mono text-xs border border-mainGreen/20">02</span>
                                Current Focus
                            </h3>
                             <ul class="space-y-4 text-slate-400">
                                <li class="flex items-center gap-3">
                                    <div class="w-1.5 h-1.5 rounded-full bg-mainGreen"></div>
                                    <span>Home Lab Automation (n8n + Cloudflare)</span>
                                </li>
                                <li class="flex items-center gap-3">
                                    <div class="w-1.5 h-1.5 rounded-full bg-mainGreen"></div>
                                    <span>Advanced Cybersecurity Research</span>
                                </li>
                                <li class="flex items-center gap-3">
                                    <div class="w-1.5 h-1.5 rounded-full bg-mainGreen"></div>
                                    <span>Agentic AI & SecOps Workflows</span>
                                </li>
                            </ul>
                        </Card>
                    </div>
                </div>
            </FadeIn>
        </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-32 bg-mainBlack relative overflow-hidden">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="flex flex-col md:flex-row justify-between items-end mb-16 px-4">
                 <div class="max-w-xl">
                    <h2 class="text-5xl font-bold text-white tracking-tighter mb-4">Featured <span class="text-mainGreen">Projects</span></h2>
                     <p class="text-slate-400 text-lg font-light">
                        Tools, automation workflows, and research.
                    </p>
                </div>
                 <a 
                    href="https://github.com/5yndr0m" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="group inline-flex items-center px-6 py-3 rounded-full bg-white/5 border border-white/10 hover:border-mainGreen/50 text-white transition-all hover:bg-white/10"
                >
                    <span class="mr-2 font-mono text-sm">github.com/5yndr0m</span>
                    <Github className="w-4 h-4" />
                </a>
            </div>

            <ErrorBoundary client:load>
                 <ProjectsCarousel client:load />
            </ErrorBoundary>
        </div>
    </section>

    <!-- Blog Section -->
    <section id="blog" class="py-32 relative">
         <div class="absolute inset-0 bg-gradient-to-b from-mainBlack via-mainPurple/5 to-mainBlack pointer-events-none"></div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="text-center mb-20">
                <h2 class="text-5xl font-bold text-white tracking-tighter mb-6">Latest <span class="text-mainLavender">Insights</span></h2>
                <div class="w-24 h-1 bg-gradient-to-r from-mainPurple to-transparent mx-auto rounded-full"></div>
            </div>

            <ErrorBoundary client:load>
                <BlogGrid posts={latestPosts} client:load />
            </ErrorBoundary>
            </div>
             <div class="mt-16 text-center">
                <a 
                    href="/blog" 
                    class="inline-block px-8 py-3 rounded-full border border-white/10 text-slate-400 hover:text-white hover:border-white/30 transition-all font-mono text-sm tracking-widest uppercase hover:bg-white/5"
                >
                    View Archive
                </a>
            </div>
        </div>
    </section>

    <!-- Subtle Contact Section -->
    <section id="contact" class="py-24 relative overflow-hidden bg-mainBlack">
        <div class="max-w-4xl mx-auto px-4 text-center relative z-10">
            <h2 class="text-xl font-mono font-bold text-white mb-12 opacity-30 tracking-[0.5em] uppercase">Connect</h2>
            
            <div class="flex flex-wrap justify-center gap-8 md:gap-12">
                {contactLinks.map((link) => {
                    const Icon = link.icon;
                    return (
                        <a 
                            href={link.href}
                            target={link.name === "Email" ? "_self" : "_blank"}
                            rel="noopener noreferrer"
                            class="group relative flex flex-col items-center gap-3"
                            title={link.name}
                        >
                            <div class="w-16 h-16 rounded-2xl bg-white/5 border border-white/5 flex items-center justify-center group-hover:border-mainPurple/50 group-hover:bg-mainPurple/10 transition-all duration-500 hover:scale-110">
                                <Icon className="w-6 h-6 text-slate-400 group-hover:text-white transition-colors duration-300" />
                            </div>
                        </a>
                    );
                })}
            </div>

            <div class="mt-24">
                <p class="text-slate-600 font-mono text-xs tracking-widest">
                    SECURE THE FUTURE // AUTOMATE THE CHAOS
                </p>
            </div>
        </div>
    </section>
</Layout>
